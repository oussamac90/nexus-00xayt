# EditorConfig v0.15.3
# https://editorconfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript and JavaScript files
[*.{ts,js}]
indent_size = 2
quote_type = single
max_line_length = 120
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = true
indent_brace_style = 1tbs

# HTML, CSS and SCSS files
[*.{html,css,scss}]
indent_size = 2
quote_type = double
max_line_length = 120
selector_separator_newline = true
space_after_colon = true
space_before_brace = true

# JSON and YAML files
[*.{json,yml,yaml}]
indent_size = 2
quote_type = double
insert_final_newline = true
array_bracket_newline = true
object_curly_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
insert_final_newline = true
indent_size = 2